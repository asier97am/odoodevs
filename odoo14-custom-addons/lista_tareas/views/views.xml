<odoo>
  <data>
    <!-- explicit list view definition -->

    <!-- Definimos como es la vista explicita de la litas-->
    <record model="ir.ui.view" id="lista_tareas.list">
      <field name="name">lista_tareas list</field>
      <field name="model">lista_tareas.lista_tareas</field>
      <field name="arch" type="xml">
      <!-- cambiar color -->
        <tree decoration-success="realizada == True" decoration-danger="realizada == False">
          <!-- aÃ±adimos que el usuario puede subir una imagen-->
          <field name="avatar" widget="image" class="oe_avatar"/>
          <field name="tarea"/>
          <field name="prioridad" widget="percentpie"/>
          <field name="urgente"/>
          <field name="realizada"/>
          <!-- aÃ±adimos el campo fecha-->
          <field name="fecha"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->
    <!-- Acciones al abrir las vistas en los modelos 
    https://www.odoo.com/documentation/14.0/developer/reference/addons/actions.html
    -->

    <record model="ir.actions.act_window" id="lista_tareas.action_window">
      <field name="name">Listado de tareas pendientes</field>
      <field name="res_model">lista_tareas.lista_tareas</field>
      <field name="view_mode">tree,form</field>
    </record>



    <!-- Top menu item -->

    <menuitem name="Listado de tareas" id="lista_tareas.menu_root"/>

    <!-- menu categories -->
    <menuitem name="Tareas Importantes" id="lista_tareas.menu_1" parent="lista_tareas.menu_root"/>
    <menuitem name="Opciones Lista Tareas" id="lista_tareas.menu_2" parent="lista_tareas.menu_root"/>
    
    

    <!-- actions -->

    <menuitem name="Mostrar lista" id="lista_tareas.menu_1_list" parent="lista_tareas.menu_1"
              action="lista_tareas.action_window"/>
    <menuitem name="Ajustes" id="lista_tareas.menu_2_list" parent="lista_tareas.menu_1"
              action="lista_tareas.action_window"/>
    <menuitem name="Prueba" id="lista_tareas.menu_3_list" parent="lista_tareas.menu_2"
              action="lista_tareas.action_window"/>

    

    <!-- new menu entries-->
    <menuitem name="Comunidad" id="lista_tareas.menu_3" parent="lista_tareas.menu_root"/>
    <menuitem name="Local" id="lista_tareas.menu_4_list" parent="lista_tareas.menu_3" action="lista_tareas.action_window"/>
    <menuitem name="Global" id="lista_tareas.menu_5_list" parent="lista_tareas.menu_3" action="lista_tareas.action_window"/>
  </data>
</odoo>